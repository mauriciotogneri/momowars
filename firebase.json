{
	"database": {
		"rules": "database.rules.json"
	},
	"hosting": {
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "/api/**",
				"function": "api"
			},
			{
				"source": "/",
				"destination": "/login.html"
			},
			{
				"source": "/game",
				"destination": "/game.html"
			}
		]
	}
}